<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".view.DataHoraActivity" >

    <TextView
        android:id="@+id/textViewTituloData"
        style="@style/TextViewTituloLista"
        android:text="@string/texto_titulo_data" />

    <EditText
        android:id="@+id/editTextData"
        style="@style/EditViewCenter" />

    <Button
        android:id="@+id/buttonSelecionarData"
        style="@style/BotaoAvulso"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/texto_selec_data" />

    <TextView
        android:id="@+id/textViewTituloHora"
        style="@style/TextViewTituloLista"
        android:text="@string/texto_titulo_hora" />

    <EditText
        android:id="@+id/editTextHora"
        style="@style/EditViewCenter" />

    <Button
        android:id="@+id/buttonSelecionarHora"
        style="@style/BotaoAvulso"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/texto_selec_hora" />

    <LinearLayout
        android:id="@+id/rightRelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/buttonOkDataHora"
            style="@style/BotaoAvulso"
            android:layout_weight="1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/texto_padrao_ok" />

        <Button
            android:id="@+id/buttonCancDataHora"
            style="@style/BotaoAvulso"
            android:layout_weight="1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/texto_padrao_cancelar" />

    </LinearLayout>

</LinearLayout>